<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="wrap_content">

    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
              android:id="@+id/nomePresisdente" android:text="Lista de Presidentes"
              android:textSize="18sp"/>

    <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="152dp">

        <TextView android:layout_width="184dp" android:layout_height="match_parent"
                  android:id="@+id/votos" android:text="Opções de Votos"
                  android:textSize="18sp"/>
        <RadioButton
                android:id="@+id/branco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Branco"/>


        <RadioButton
                android:id="@+id/nulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nulo"/>

        <TextView android:layout_width="184dp" android:layout_height="match_parent"
                  android:id="@+id/nomesPresidentes" android:text="Nomes Presidentes"
                  android:textSize="18sp"/>
        <RadioButton
                android:id="@+id/doria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doria"/>
        <RadioButton
                android:id="@+id/lula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lula"/>
        <RadioButton
                android:id="@+id/marina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marina"/>
        <RadioButton
                android:id="@+id/bolsonaro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bolsonaro"/>
    </RadioGroup>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Confirmar"/>


</LinearLayout>